{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  packageRules: [
    {
      "description": "Talos Group",
      "groupName": "Talos",
      "matchPackagePatterns": [
        "siderolabs/talosctl",
        "siderolabs/installer"
      ],
      "matchDatasources": [
        "docker"
      ],
      "group": {
        "commitMessageTopic": "{{{groupName}}} group"
      },
      "separateMinorPatch": true
    }
  ]
}